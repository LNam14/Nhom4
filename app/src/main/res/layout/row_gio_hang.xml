<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSanPham_gioHang"
        android:layout_width="128dp"
        android:layout_height="164dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/edTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:text="Tên sản phẩm"
        app:layout_constraintStart_toEndOf="@+id/imgSanPham_gioHang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:text="Size"
        app:layout_constraintStart_toEndOf="@+id/imgSanPham_gioHang"
        app:layout_constraintTop_toBottomOf="@+id/edTen" />

    <TextView
        android:id="@+id/edGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:inputType="number"
        android:text="Giá"
        android:textColor="#FF0000"
        app:layout_constraintStart_toEndOf="@+id/imgSanPham_gioHang"
        app:layout_constraintTop_toBottomOf="@+id/edLoai" />
    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/imgSanPham_gioHang"
        app:layout_constraintTop_toBottomOf="@+id/edGia"
        android:layout_marginStart="16dp"
        tools:ignore="MissingConstraints">
        <ImageButton
            android:id="@+id/giam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/giam"/>

        <TextView
            android:id="@+id/soluong"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="20dp" />
        <ImageButton
            android:id="@+id/tang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tang"/>
    </RadioGroup>
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/imgSanPham_gioHang"
        app:layout_constraintTop_toBottomOf="@+id/radio"
        app:srcCompat="@drawable/add_ic" />

</androidx.constraintlayout.widget.ConstraintLayout>