<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/teal_200"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Sửa sản phẩm"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edMaSP_sua"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:hint="Mã sản phẩm"
                android:lines="1"
                android:padding="5dp"
                android:textSize="10dp" />
            <EditText
                android:id="@+id/edTenSP_sua"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:hint="Tên sản phẩm"
                android:lines="1"
                android:padding="5dp"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/edSoLuong_sua"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:hint="Số lượng"
                android:inputType="number"
                android:lines="1"
                android:padding="5dp"
                android:textSize="10dp" />
            <EditText
                android:id="@+id/edPhanLoai_sua"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:hint="Phân loại"
                android:lines="1"
                android:padding="5dp"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/edGiaTien_sua"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:hint="Giá tiền"
                android:lines="1"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_sua"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="right|center"
                android:layout_margin="5dp"
                android:background="@drawable/edittext"
                android:contentDescription="hinhAnh"
                android:src="@drawable/account" />
        </LinearLayout>

    </LinearLayout>

        <EditText
            android:id="@+id/edMota_sua"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext"
            android:gravity="top"
            android:hint="Mô tả"
            android:padding="5dp"
            android:textSize="10dp" />
    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnThemSP_sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm sản phẩm"
            android:textSize="10dp"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnXemDS_sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem danh sách"
            android:textSize="10dp"
            android:layout_margin="2dp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>