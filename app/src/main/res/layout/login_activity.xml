<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FCFDFF">

    <androidx.cardview.widget.CardView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="90dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logo_app"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="monospace"
            android:text="Username"
            android:textColor="#424040"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edAccount_LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="monospace"
            android:drawableLeft="@drawable/size1"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:elevation="7dp"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="#424040"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:background="@drawable/edit_text_login" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:layout_marginLeft="10dp"
            android:text="Password"
            android:textColor="#424040"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edPassword_RegisterActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_login"
            android:drawableLeft="@drawable/size2"
            android:drawablePadding="10dp"
            android:elevation="7dp"
            android:fontFamily="monospace"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#424040"
            android:textIsSelectable="true"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister_RegisterActivity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:backgroundTint="#F5865B"
        android:fontFamily="monospace"
        android:text="Login"
        android:textColor="#fff"
        app:cornerRadius="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ckNhoMatKhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="monospace"
            android:text="Remember me ?"
            android:textColor="#424040"
            android:buttonTint="#F44336"
            app:useMaterialThemeColors="true" />
        <TextView
            android:id="@+id/tvForgotPass_LoginActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="monospace"
            android:text="Forgot password ?"
            android:textColor="#424040"
            android:textSize="17sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRegister_LoginActivity"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="monospace"
            android:text="No account yet? Create one"
            android:textColor="#424040"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>